{
  "name": "@great-detail/whatsapp",
  "version": "0.0.6",
  "license": "SEE LICENSE IN LICENSE FILE",
  "description": "SDK for interfacing with WhatsApp Business Platform in Typescript or Node.js using the Cloud API, hosted by Meta.",
  "homepage": "https://github.com/great-detail/WhatsApp-Nodejs-SDK",
  "author": "Great Detail Ltd <info@greatdetail.com>",
  "contributors": [
    "Rashed Talukder",
    "Dom Webber <dom.webber@hotmail.com>",
    "Great Detail Ltd <info@greatdetail.com>"
  ],
  "keywords": [
    "WhatsApp",
    "SDK",
    "Business",
    "Platform",
    "secure",
    "messaging",
    "NodeJS",
    "Cloud API"
  ],
  "type": "commonjs",
  "main": "./src/index.ts",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc -p tsconfig.json && babel dist --out-dir dist",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint . --fix",
    "lint:cspell": "cspell \"{README.md,.github/*.md,docs/**/*.md}\"",
    "lint:typecheck": "tsc --noEmit",
    "test": "npm-run-all test:*",
    "test:jest": "jest --passWithNoTests",
    "format": "npm-run-all format:*",
    "format:prettier": "prettier . --write",
    "format-ci": "npm-run-all format-ci:*",
    "format-ci:prettier": "prettier . --check"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@eslint/eslintrc": "^2.1.2",
    "@jest/globals": "^29.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "babel-jest": "^29.7.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "cspell": "^7.3.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "jest": "^29.7.0",
    "nock": "^13.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "winston": "^3.10.0"
  },
  "engines": {
    "node": ">=16.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/great-detail/WhatsApp-Nodejs-SDK.git"
  },
  "bugs": {
    "url": "https://github.com/great-detail/WhatsApp-Nodejs-SDK/issues"
  },
  "peerDependencies": {
    "winston": "3.10.0"
  },
  "peerDependenciesMeta": {
    "winston": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
